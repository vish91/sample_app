<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", :onkeypress=>"return charLimit(this)", :onkeyup=>"return characterCount(this)" %>
    <span id="charCount">140</span> <p> characters left..</p>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>

